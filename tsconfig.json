{
    "compilerOptions": {
        "module": "ES6",
        "declaration": true,
        "noImplicitAny": false,
        "removeComments": true,
        "noLib": false,
        "emitDecoratorMetadata": true,
        "experimentalDecorators": true,
        "target": "ES2022",
        "stripInternal": true,
        "sourceMap": true,
        "lib": [
            "ESNext",
            "DOM",
            "ES2018.AsyncGenerator"
        ]
    },
    "exclude": [
        "node_modules",
        "**/*.spec.ts"
    ]
}