{
    "compilerOptions": {
        "module": "ES6",
        "declaration": true,
        "noImplicitAny": false,
        "removeComments": true,
        "noLib": false,
        "emitDecoratorMetadata": true,
        "experimentalDecorators": true,
        "target": "ES2022",
        "stripInternal": true,
        "sourceMap": true,
        "esModuleInterop": true,
        "moduleResolution": "node",
        "lib": [
            "ESNext",
            "DOM",
            "ES2018.AsyncGenerator"
        ],
        "types": [
            "node",
            "jest",
            "jest-fetch-mock",
            "ts-jest"
        ]
    },
    "exclude": [
        "node_modules",
        // "**/*.test.ts"
    ]
}
